{
    "assets": {
        "fonts": {
            "src": "fonts",
            "dest": "assets/fonts",
            "files": ["**/*.{woff2,woff,svg,eot,ttf,otf}"]
        },
        "images": {
            "src": "images",
            "dest": "assets/images",
            "files": ["**/*.{png,jpg,jpeg,gif,svg}"],
            "ignore": ["sprites/**"],
            "jpg": {
                "progressive": true
            },
            "png": {
                "optimizationLevel": 3
            },
            "gif": {
                "interlaced": true
            },
            "svg": {}
        },
        "scripts": {
            "src": "js",
            "dest": "assets/scripts",
            "files": ["*.js"],
            "watch": ["**/*.js"],
            "eslint": {}
        },
        "styles": {
            "src": "scss",
            "dest": "assets/styles",
            "files": ["**/[!_]*.{sass,scss}"],
            "watch": ["**/*.{sass,scss}"]
        },
        "html": {
            "src": "html",
            "dest": "",
            "files": ["**/*.{html,txt,php}"],
            "replace": {
                "@sprite:([^,]+),([^\\s]+)": "<svg class=\"$2\"><use xmlns:xlink=\"http://www.w3.org/1999/xlink\" xlink:href=\"$1\"></use></svg>",
                "@version": "@this.version"
            }
        },
        "sprites": {
            "src": "images/sprites",
            "dest": "assets/images/sprites",
            "files": ["*/*.svg"],
            "mode": {
                "inline": true,
                "symbol": true
            }
        }
    },
    "autoprefixer": {
        "browsers": ["last 1 version", "last 2 ie versions", "android >= 4.4", "last 2 iOS versions"]
    },
    "browsersync": {
        "server": {
            "baseDir": "@this.dest"
        }
    },
    "src":  "./src",
    "dest": "./build",
    "env": "prod",
    "version": "1.0.0"
}
